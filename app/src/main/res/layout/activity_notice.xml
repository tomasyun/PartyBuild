<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:orientation="vertical">
    <!--标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/theme_color">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:contentDescription="@null"
            android:onClick="goBackNotice"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/img_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="通知"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <www.yuntdev.com.refreshlayoutlibrary.refreshlayout.SmartRefreshLayout
        android:id="@+id/srl_notice"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <www.yuntdev.com.refreshlayoutlibrary.refreshlayout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_notice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

        </android.support.v7.widget.RecyclerView>

    </www.yuntdev.com.refreshlayoutlibrary.refreshlayout.SmartRefreshLayout>

    <include
        android:id="@+id/notice_empty_data"
        layout="@layout/empty_data"
        android:visibility="gone" />

    <include
        android:id="@+id/notice_net_error"
        layout="@layout/net_error"
        android:visibility="gone" />
</LinearLayout>