<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:orientation="vertical">
    <!--标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/theme_color">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:contentDescription="@null"
            android:onClick="goback"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/img_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="密码修改"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <!--内容-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="原密码"
                android:textSize="14sp" />
            <!--原密码-->
            <EditText
                android:id="@+id/et_pwd_old"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@drawable/edittext_white_bg"
                android:hint="请输入原密码"
                android:inputType="text"
                android:maxLength="6"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColorHint="#ddd"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginLeft="15dp"
            android:background="#ddd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="新密码"
                android:textSize="14sp" />
            <!--新密码-->
            <EditText
                android:id="@+id/et_pwd_new"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@drawable/edittext_white_bg"
                android:hint="请输入新密码"
                android:inputType="text"
                android:maxLength="6"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColorHint="#ddd"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginLeft="15dp"
            android:background="#ddd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="确认密码"
                android:textSize="14sp" />
            <!--确认密码-->
            <EditText
                android:id="@+id/et_pwd_new_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@drawable/edittext_white_bg"
                android:hint="请再次输入新密码"
                android:inputType="text"
                android:maxLength="6"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColorHint="#ddd"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/button_corner20_red_bg"
        android:clickable="true"
        android:gravity="center"
        android:onClick="updatePasswod"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="确认"
        android:textColor="@color/white"
        android:translationZ="5dp" />

</LinearLayout>