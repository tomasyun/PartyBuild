<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!--标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/theme_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="签到"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <www.yuntdev.com.refreshlayoutlibrary.refreshlayout.SmartRefreshLayout
        android:id="@+id/srl_sign_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <www.yuntdev.com.refreshlayoutlibrary.refreshlayout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_conference_theme_pic"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/white"
                android:contentDescription="@null"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/iv_sign_in_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_time" />

                <TextView
                    android:id="@+id/tv_sign_in_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/iv_sign_in_date"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_sign_in_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/tv_sign_in_date"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_sign_in_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/tv_sign_in_week"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_sign_in_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/iv_sign_in_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_location" />

                <TextView
                    android:id="@+id/tv_sign_in_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@+id/iv_sign_in_address"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/theme_color"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_sign_in_start"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/circle_red_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_sign_in_enable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="会议签到"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <!--<TextView-->
                    <!--android:id="@+id/tv_sign_in_count_down"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_centerInParent="true"-->
                    <!--android:layout_marginBottom="30dp"-->
                    <!--android:text="00:00:00"-->
                    <!--android:textColor="#fd9494"-->
                    <!--android:textSize="12sp" />-->
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/iv_sign_in_enable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_sign_in_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iv_sign_in_enable"
                    android:letterSpacing="0.2"
                    android:text=""
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </www.yuntdev.com.refreshlayoutlibrary.refreshlayout.SmartRefreshLayout>

    <include
        android:id="@+id/sign_in_empty_data"
        layout="@layout/empty_data"
        android:visibility="gone" />

    <include
        android:id="@+id/sign_in_net_error"
        layout="@layout/net_error"
        android:visibility="gone" />
</LinearLayout>