<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="www.dico.cn.partybuild">

    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <!--地图SDK（包含其搜索功能）需要的基础权限-->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!--允许程序打开网络套接字-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--允许程序设置内置sd卡的写权限-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许程序获取网络状态-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--允许程序访问WiFi网络信息-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--允许程序读写手机状态和身份-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--允许程序访问CellID或WiFi热点来获取粗略的位置-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!--用于访问GPS定位-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!--用于申请调用A-GPS模块-->
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <application
        android:name=".DicoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/img_desk_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/img_desk_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".activity.SettingActivity" />
        <activity android:name=".activity.PwdupdateActivity" />
        <activity android:name=".activity.CreditInfoActivity" />
        <activity android:name=".activity.CreditRankActivity" />
        <activity android:name=".activity.BaseInfoActivity" />
        <activity android:name=".activity.CollectActivity" />
        <activity android:name=".activity.FeedbackActivity" />
        <activity android:name=".activity.ExamRuleActivity" />
        <activity android:name=".activity.OnlineExamActivity" />
        <activity android:name=".activity.NoticeActivity" />
        <activity android:name=".activity.InfodetailsActivity" />
        <activity android:name=".activity.PayDuesActivity" />
        <activity android:name=".activity.CreditRuleActivity" />
        <activity android:name=".activity.MeetingActivity" />
        <activity android:name=".activity.MeetingBriefActivity" />
        <activity android:name=".activity.MailboxActivity" />
        <activity android:name=".activity.ActivityMrgActivity" />
        <activity android:name=".activity.OrgActActivity" />
        <activity android:name=".activity.VoteManagerActivity" />
        <activity android:name=".activity.QuestionSurveyActivity" />
        <activity android:name=".activity.PaymentRuleActivity" />
        <activity android:name=".activity.OrgActBriefActivity" />
        <activity android:name=".activity.StudyTaskActivity" />
        <activity android:name=".activity.NoticeInfoActivity" />
        <activity android:name=".activity.ExamResultActivity" />
        <activity android:name=".activity.PreviewQuestionResultActivity"/>

        <!--使用高德api所申请的key-->
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="baf0f66c87c1bddf219266db02172e9a">

        </meta-data>
        <!--高德定位服务-->
        <service android:name="com.amap.api.location.APSService" />
        <!--下载服务-->
        <service android:name=".service.DownLoadService" />
        <!--定时获取通知消息服务-->
        <service android:name=".service.RefreshNoticeService" />

        <receiver android:name=".receiver.AlarmReceiver" />
    </application>
</manifest>